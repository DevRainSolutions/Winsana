<UserControl x:Class="DevRain.Asana.Controls.Tiles.ItemTileControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="173" d:DesignWidth="173">

	<Grid x:Name="LayoutRoot"  Width="173" Height="173" Background="{StaticResource PhoneAccentBrush}">
		<StackPanel>
			<TextBlock Text="Winsana" Name="tbName" Margin="12,12,0,0" TextWrapping="Wrap" Foreground="White" FontSize="{StaticResource PhoneFontSizeMedium}"/>
			<TextBlock Text="summary" Name="tbSummary" Margin="12,12,0,0" TextWrapping="Wrap" FontSize="{StaticResource PhoneFontSizeNormal}" Foreground="White"/>
		</StackPanel>
	</Grid>
</UserControl>